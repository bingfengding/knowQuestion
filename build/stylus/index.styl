*
    margin 0
    padding 0
    font-family  "微软雅黑"
    box-sizing border-box

body
    overflow-x hidden
    background-color  #fff
    font-size 0.8rem

img
    border 0

ul
    margin 0
    padding 0

ul li
    list-style: none

a
    text-decoration none
    color #000
i
    font-style normal
//修改ui
.ui-tooltip
    color #666
.ui-menu-item a
    color #666
.ui-datepicker-today
    .ui-state-highlight
        border 1px solid #eee
        color #f60
.ui-datepicker-current-day
    .ui-state-active
        border 1px solid #eee
        color #06f
.titleColor
    font-size 0.7rem
    color #666666
.ui-datepicker-title
    font-size 0.7rem
    color #666666
header
    width 100%
    height 2rem
    background linear-gradient(#ffffff, #b5b5b5)
    position fixed
    top 0
    z-index 14
    .header_main
        width 50rem
        height 2rem
        margin 0 auto
        :after
            clear both
            content ""
            height 0
            visibility hidden
        h1
            font-size 1rem
            margin 0
            padding 0 0.5rem
            color #666666
            line-height 2rem
            float left
        .header_search
            float left
            padding-top 0.3rem
            .search
                width 16rem
                height 1.4rem
                border 1px solid #CCCCCC
                background #ffffff
                color #666666
                font-size 0.7rem
                text-indent 0.25rem
        .header_button
            padding 0.25rem
            float left
            #search_button,#question_button
                font-size 1rem
                .ui-button-text
                    padding-top 0
                    padding-bottom 0
        .header_member
            float right
            height 2rem
            line-height 2rem
            width  10rem
            color #555555
            font-size 0.8rem
            a
                color #555555
